<div class="container">
    <h1>Results</h1>
    <hr>
    <!-- Displays message if there are no results -->
    {{#unless booksObj}}
    <h3>No results, please try again.</h3>
    {{/unless}}
    <!-- Iterates over results and renders to page-->
    {{#if booksObj}}
    {{#each booksObj}}
    <div class="row">
        <div class="col-md-3 mb-3 text-center">
            <div class="book-box w-100 rounded border-secondary border">
                <a href="/book/{{this.id}}">
                    <div class="card book text-white" style="background-image: url('{{this.imageUrl}}');">
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-9 text-black">
            <h1><a class="text-black" href="/book/{{this.id}}">{{this.title}}</a></h1>
            <h6><i>{{this.body}}</i></h6>
        </div>
    </div>
    <hr>
    {{/each}}
    {{/if}}
</div>