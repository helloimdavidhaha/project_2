<script>
$(document).ready(() => {
    // button control
    // hide content
    $('#allBook').hide();
    // toggle content
    $('#allButton').click(() => {
        $('#allBook').toggle();
    });

    $('#yourBookDisplay').hide();

    $('#modalSubmit').click((e) => {
        e.preventDefault();
        const profilePic = $('#profilePic').val().trim();
        const aboutMe = $('#aboutInput').val().trim();
        const username = $('#username').val().trim();
        const modal = {
            firstname: '{{user.firstname}}',
            lastname: '{{user.lastname}}',
            email: '{{user.email}}',
            about: aboutMe,
            photo: profilePic,
            username: username
        }
        console.log(profilePic, aboutMe, username);
        $.ajax('/api/user/' + {{ user.id }}, {
            type: "PUT",
            data: modal
        }).then(result => {
            location.reload();
        }).catch(err => {
            console.error(err);
        });
    });

    $('#allBooks').click( () => {
        $('#allBookDisplay').show();
        $('#yourBookDisplay').hide();
        $('#allBooks').addClass('selected');
        $('#yourBooks').removeClass('selected');
    });
    $('#yourBooks').click( () => {
        $('#allBookDisplay').hide();
        $('#yourBookDisplay').show();
        $('#allBooks').removeClass('selected');
        $('#yourBooks').addClass('selected');
    })
});
</script>